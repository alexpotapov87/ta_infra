pipeline {  
    environment {
        registry = "alexpotapov87/web_ta"
        registryCredential = 'dockerhub'
        dockerImage = ''
        hash = 'git show --format="%h" HEAD | head -1'
    }  
  
  agent any
  
  stages {
    stage('Cloning Git') {
      steps {
        git 'https://github.com/alexpotapov87/ta_infra'
            }
        }
    stage('Building image') {
      steps{
        script {
          sh "cd nginx"
          docker.build registry + ":$hash"
          dockerImage = docker.build registry + ":$hash"
          sh "cd ../prometheus"
          docker.build registry + ":$hash"
          dockerImage = docker.build registry + ":$hash"
                }
            }
        }
    stage('Pushing images') {
      steps{
        script {
          docker.withRegistry( '', registryCredential ) {
          dockerImage.push() 
          }
          sh "cd ../nginx"
          docker.withRegistry( '', registryCredential ) {
          dockerImage.push()
          }
        }
      }
    }
    
    stage('Remove Unused docker image') {
      steps{
        sh "docker rmi $registry:$hash"
          }
        }
    stage('Deploing to minikube') {
      steps{
        script {
          try {
            sh "kubectl delete deploy --all -n dev"
            sh "kubectl delete svc --all -n dev"

          } catch (err) {
            echo "No web deployment found, continuing"
          }
          sh "kubectl apply -f ../kubernetes/. -n dev"
            }
           }
        }
  }
}